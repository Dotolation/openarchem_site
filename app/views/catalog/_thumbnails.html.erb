  <div class="row">
    <% image_hash.each do |key, val| %>
      <div class="col-xs-6 col-md-3">
        
        <a href="#" class="thumbnail" data-toggle="modal" data-target="#myModal<%= key %>">
          <%= image_tag(val[1], :alt => key) %>
        </a>
        <div class="caption">
          <p><%= val[2] %></p>
        </div>
        
      </div>
    

      <div id="myModal<%= key %>" class="modal fade" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <%= val[2] %>
            </div>
            <div class="modal-body">
             <%= link_to image_tag(val[1], style: 'height:auto;width:100%;'), val[0], target: :_blank %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
